@model IEnumerable<MusicAppRedux.Models.Album>

@{
    ViewData["Title"] = "Details";
}


<h2>Genre Details</h2>

<h3>@ViewData["Genre"]</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Genres" asp-action="Index">Back to List</a>
</div>