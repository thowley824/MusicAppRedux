@model IEnumerable<MusicAppRedux.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h2>Index: Genres</h2>

<p>
    <a asp-action="Create">Add New Genre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Genre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.GenreID">@Html.DisplayFor(modelItem => item.Name)</a>
</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    Click on any of the genres listed above to display a list of all albums of that particular type.
</p>
