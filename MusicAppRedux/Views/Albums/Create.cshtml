@model MusicAppRedux.Models.Album

@{
    ViewData["Title"] = "Create";
}

<h3>Add New Album</h3>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ArtistID" class="col-md-2 control-label">Artist</label>
            <div class="col-md-10">
                <select asp-for="ArtistID" class ="form-control" asp-items="ViewBag.ArtistID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GenreID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="GenreID" class ="form-control" asp-items="ViewBag.GenreID"></select>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

