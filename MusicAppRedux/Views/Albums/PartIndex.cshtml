@model IEnumerable<MusicAppRedux.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h2>Your favorite genre is: @ViewData["ChosenGenre"] </h2>
<h3>Below are all the @ViewData["ChosenGenre"] albums: </h3>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Index">View All Albums</a>
</p>